#!/usr/bin/env node
const program = require('commander');
const manifest = require('../package.json');

program
  .version(`${manifest.name} v${manifest.version}`)
  .command('login [url]', 'Information')
  .command('deploy [folder]', 'Deploy')
  .command('list', 'List')
  .command('remove [name]', 'Remove')
  .command('ssl [name]', 'Manage SSL')
  .command('logs [name]', 'StdOut/StdErr Log-Stream')
  .command('monitor [name]', 'Metric-Stream')
  .parse(process.argv);
