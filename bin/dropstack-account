#!/usr/bin/env node
const DROPSTACK_BASE_URL = process.env.DROPSTACK_BASE_URL || `https://api.dropstack.run`;

const fs = require('fs');
const path = require('path');
const program = require('commander');
const fetch = require('node-fetch');
const chalk = require('chalk');
const credentials = require('../lib/credentials')();
const stackSettings = require('../lib/settings')();

program
  .option('-u, --username <username>', 'User email address')
  .option('-p, --password <password>', 'User\'s password')
  .option('-s, --signout', 'Sign out')
  .option('-l, --login', 'Force login')
  .option('-r, --reset', 'Reset login')
  .option('-t, --token', 'Display current user JWT token')
  .parse(process.argv);

if(!program.args.length) account(program.opts());

function account({token, username, password, login, reset, signout}) {
  if(signout) {
    return stackSettings.removeGlobalFile()
      .then(() => stackSettings.removeProjectFile())
      .then(() => {
        console.log(chalk.green(`signed out`));
        process.exit(0);
      })
      .catch(err => {
        console.error(chalk.red(`\nAn error occurred ${chalk.gray(err.message)}`));
        process.exit(1);
      });
  }

  stackSettings.load({token, username, password, login, reset, signout})
  .then(settings => reset ? credentials.reset(settings).then(data => Promise.reject(data)) : Promise.resolve(settings))
  .then(settings => credentials.inputEmail(login ? '' : settings.username).then(data => Object.assign(settings, data)))
  .then(settings => !settings.token ? credentials.inputPassword(settings.password).then(data => Object.assign(settings, data)) : Promise.resolve(settings))
  .then(settings => !settings.token ? credentials.login(settings).catch(() => credentials.signup(settings)).then(data => Object.assign(settings, data)) : Promise.resolve(settings))
  .then(settings => {
    if(settings.message) return Promise.reject(new Error(settings.message));
    return settings;
  })
  .then(settings => stackSettings.save(settings))
  .then(settings => {
    console.log(`Account information for ${settings.username}`);
    return settings;
  })
  .then(settings => fetch(`${DROPSTACK_BASE_URL}/account`, { headers: { Authorization: `Bearer ${settings.token}`, } }).then(response => response.json()).then(data => Object.assign(data, settings)))
  .then(data => Boolean(data.message) ? Promise.reject(new Error(data.message)) : data)
  .then(data => {
    console.log(`EMail: ${data.email}`);
    console.log(`Plan: ${data.metadata.plan || '-'}`);
    if(token) console.log(`JWT: ${data.token}`);
    process.exit(0);
  })
  .catch(err => {
    if(err.message === '"We\'ve just sent you an email to reset your password."') {
      console.log(chalk.red(err.message));
      return process.exit(0);
    }
    if(err.message === 'canceled') {
      console.log(chalk.yellow('aborted'));
      return process.exit(0);
    }
    if(err.message === 'The user already exists.') {
      console.error(chalk.red(`Login failed`));
      return process.exit(1);
    }

    console.error(chalk.red(`\nAn error occurred ${chalk.gray(err.message)}`));
    process.exit(1);
  });
}
