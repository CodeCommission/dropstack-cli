#!/usr/bin/env node
const BASE_URL = `https://api.dropstack.run`;

const fs = require('fs');
const path = require('path');
const program = require('commander');
const fetch = require('node-fetch');
const stackSettings = require('../lib/stack-settings')();

if(!fs.existsSync(process.argv[2])) process.argv.splice(2, 0, process.cwd());

program
  .arguments('<id> <file...>')
  .action(ssl)
  .parse(process.argv);

function ssl(id, files){
  console.log(`SSL for ${id} ${files}`);
  stackSettings.load()
  .then(console.log)
  .catch(console.error);
}
